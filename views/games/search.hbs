<main id="search">
            <section class="game-search">
            <h1>Search</h1>

            <form class="search-form" action="/games/search" method="GET">
                <input type="text" class="search-game" name="name" value= "{{query.name}}" placeholder="Search here...">
                <select id="platform" name="platform">
                  {{#each gameTypes}}
                        <option value={{value}} {{isSelected}}>{{label}}</option>
                        {{/each}}
                </select>
                <button type="submit" class="btn-search">Search</button>
            </form>
                 {{#if games}}
            <div class="search-result">
                <div class="search-list">
                    {{#each games}}
                    <div class="game">
                        <div class="game-img">
                            <img src="{{image}}">
                        </div>
                        <div class="game-info">
                            <h1>{{name}}</h1>
                            <p><span>Platform: </span>{{platform}}</p>
                            <p><span>Ganre: </span>{{genre}}</p>
                            <p><span>Price: </span>${{price}}</p>
                        </div>

                        <a href="/games/{{_id}}/details" class="btn-details">Details</a>
                    </div>
                    {{/each}}
                </div>
            </div>
             {{else}}
            <div class="no-match">
                <p>No match was found!</p>
            </div> 
            {{/if}}
        </section>
</main>